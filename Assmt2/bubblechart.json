{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "bloodtypes.csv"
  },
  "params":[
    {
      "name": "Continent_selection",
      "bind": {
      "input": "select",
      "options": [
        null,
        "North America",
        "South America",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
      ],
      "labels": [
        "Show All",
        "North America",
        "South America",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
],
      "name": "Continent Selection: "
    }
  },
  {   "name": "Population_Above",
      "value": 0,
      "bind": {
      "input": "range",
      "min": 0,
      "max": 300000000,
      "step": 10000000,
      "name": "Minimum Population: "
    } 
  }
],
    "transform": [
      {"filter":"datum.Population > Population_Above"},
      {"filter": "Continent_selection == null || datum.Continent ==Continent_selection"}
    ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Country's Population",
      "axis": {"tickCount": 6},
      "scale": {"type": "log","domain": [1, 20000000000]}
    }, "y": {
      "field": "AB- Population",
      "type": "quantitative",
      "axis": {"tickCount": 7},
      "scale": {"type": "log","domain": [1, 10000000]}
    }
    },
    "layer": [ {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale":{
              "type": "threshold",
              "domain":[100000,10000000,100000000,500000000,1000000000,14000000000],
              "range":[40,100,200,300,400,600]
          },
          "legend":{"format":".1s"}
      },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
      "South America",
      "Europe",
      "Africa",
      "Asia",
      "Oceania"
  ], "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#a6cee3",
          "#377eb8",
          "#a65628"]
      }
    },
    "opacity":{"value": 0.6},
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "AB- Population", "type": "quantitative", "format": ","},
      {"field": "Population", "type": "quantitative", "format": ","},
      {"field": "AB-", "type": "quantitative", "format": ","}
    ]
  }
},
  {"mark": {
  "type": "text",
  "align": "right",
  "baseline": "middle",
  "dx": -12,
  "fontSize": 11.5,
  "fontStyle": "italic"
},
"encoding": {
  "text": {"field": "Country", "type": "nominal"},
  "color": {"value": "black"},
  "opacity": { "condition": {
    "test": "datum['Country'] == 'China' || datum['Country'] =='India' || datum['Country'] == 'Australia' || datum['Country'] =='New Zealand' || datum['Country'] == 'France' || datum['Country'] =='Malaysia' ||  datum['Country'] == 'America'",
"value": 1 },
"value": 0 },
"tooltip": [
  {"field": "Country", "type": "nominal"},
  {"field": "Continent", "type": "nominal"},
      {"field": "AB- Population", "type": "quantitative", "format": ","},
      {"field": "Population", "type": "quantitative", "format": ","},
      {"field": "AB-", "type": "quantitative", "format": ","
} ]
} }
] }